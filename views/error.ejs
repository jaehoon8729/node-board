<%- include('partials/header', { title: '오류' }) %>

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="error-template">
            <h1 class="display-1"><%= status %></h1>
            <h2>오류가 발생했습니다</h2>
            <div class="error-details mb-4">
                <%= message %>
            </div>
            <div class="error-actions">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house"></i> 홈으로
                </a>
                <a href="/board" class="btn btn-secondary">
                    <i class="bi bi-list"></i> 게시판으로
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .error-template {
        padding: 40px 15px;
        text-align: center;
    }
    .error-actions {
        margin-top: 15px;
        margin-bottom: 15px;
    }
    .error-actions .btn {
        margin-right: 10px;
    }
</style>

<%- include('partials/footer') %>
